@model List<News.Models.NewsComponents>
@{
    ViewBag.Title = "MainNews";
    Layout = "~/Views/Shared/_Layoutnews.cshtml";
}
<div>
    <ul>
        @foreach (var l in Model)
        {

            if (l.Section == "Section 1")
            {
                if (l.Show)
                {
            <li id="@l.NewsID" >
                <div class="contentnewli">
                    <div>
                        @if (l.Images.Count > 0)
                        {
                            <img  width="300px" height="230px"  alt="@l.NewsHeadline" src="@l.Images[0].Url" />

                        }
                    </div>
                    <div>
                        <h3>
                            <a href="/Home/NewsDetails/ + @l.NewsID">@l.NewsHeadline</a>
                        </h3>
                    </div>
                    <div>
                        <div>@Html.Raw(System.Web.HttpUtility.HtmlDecode(l.NewsItem).Substring(0, 200))</div>
                        ...<a href="/Home/NewsDetails/ + @l.NewsID">Read More</a></div>
                    <div>@String.Format("{0:ddd, MMMM d, yyyy}", l.NewsAdded)
                    </div>
                </div>
            </li>
                }
                else
                {
@* <li id="@l.NewsID" style="display:none">
                <div>
                    <div>
                        @if (l.Images.Count > 0)
                        {
                            <img alt="@l.NewsHeadline" width="300px" height="230px" src="@l.Images[0].Url" />

                        }
                    </div>
                    <div>
                        <h2>@l.NewsHeadline
                        </h2>
                    </div>
                    <div>
                           <div>@Html.Raw(System.Web.HttpUtility.HtmlDecode(l.NewsItem).Substring(0,300))</div>...<a href="/Home/NewsDetails/ + @l.NewsID">Read
                            More</a></div>
                </div>
            </li>*@
                }
            }

        }
    </ul>
</div>
@section NewItemsTopLeftRight
{
    <ul>
        @foreach (var s in Model)
        {
            if (s.Section == "Section 2")
            {
            <li>
                <div class="contentnewhead">
                    <div class="contentnewheadline">
                        <a  href="/Home/NewsDetails/ + @s.NewsID">@s.NewsHeadline</a>
                    </div>
                    <div class="contentnewheadline">
                        @Html.Raw(System.Web.HttpUtility.HtmlDecode(s.NewsItem).Substring(0, 60))
                    </div>
                    <div>
                        <div class="published">@String.Format("{0:ddd, MMMM d, yyyy}", s.NewsAdded)
                        </div>
                    </div>
                </div>
            </li>
            }
        }
    </ul>
}
@section NewItemsBottomLeft
{
    <ul>
        @foreach (var l in Model)
        {
            if (l.Section == "Section 3")
            {
            <li>
                <div class="contentnewhead" style="clear: both">
