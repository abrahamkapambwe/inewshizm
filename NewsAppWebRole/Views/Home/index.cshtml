                        </div>
                        <div>
                            <table>
                                <tr>
                                    <td>
                                        @if (l.Images.Count > 0)
                                        {
                                            <img src="@l.Images[0].Url"  width="65" height="65" alt="@l.NewsHeadline" />
                                        }
                                    </td>
                                    <td valign="top">
                                        <p>
                                            @* @Html.Raw(System.Web.HttpUtility.HtmlDecode(l.NewsItem).Substring(0, 60))...*@
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </li>
            }
        }
    </ul>
}
