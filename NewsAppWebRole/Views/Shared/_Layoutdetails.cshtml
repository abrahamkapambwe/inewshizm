<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
   
    <link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.10/themes/dot-luv/jquery-ui.css"
        rel="stylesheet" type="text/css" />
  
    <link href="../../Content/themes/SiteCustom.css" rel="stylesheet" type="text/css" />
     <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
   

   
</head>
<body>
    <div id="fb-root">
    </div>
  
    <div class="page">
        <div id="header">
            <div class="advertise">
                <div style="width: 900px; margin-left: auto; margin-right: auto; vertical-align: baseline;
                    padding-top: 5px">
                    <div style="float: left; padding-bottom: 10px">
                        <a href="#">ePopertySearch</a></div>
                    <div style="float: right; padding-bottom: 10px">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
            <div class="leaderBoard">
            </div>
            <div class="top_header">
                <div id="title">
                    News ZA<br />
                    informing the public
                </div>
                <div id="header_breakingNews">
                    @Html.Partial("BreakingNewsComment")
                </div>
                <div id="header_featuredProperty">
                    <div class="featuredProperty">
                        @Html.Partial("_FeaturedProperty")
                    </div>
                </div>
            </div>
            <div>
                <div class="navigation">
                    <div style="vertical-align: middle">
                        <div style="float: left;">
                            <ul id="menu">
                                <li class="navLink">@Html.ActionLink("News", "MainNews", "Home")</li>
                                <li class="navLink">@Html.ActionLink("Politics", "Politics", "Home")</li>
                                <li class="navLink">@Html.ActionLink("Business", "Business", "Home")</li>
                                <li class="navLink">@Html.ActionLink("Technology", "Technology", "Home")</li>
                                <li class="navLink">@Html.ActionLink("Entertainment", "Entertainment", "Home")</li>
                               
                                <li class="navLink">@Html.ActionLink("Sport", "Sport", "Home")</li>
                                <li class="navLink">@Html.ActionLink("Property", "MainNews", "Home")</li>
                            </ul>
                        </div>
                        <div class="search">
                            @using (Html.BeginForm("Search", "Home"))
                            {
                                <div style="float: left">
                                    <input type="text" id="text" /></div>
                                <div style="float: left">
                                    <button type="submit" class="btn_search">
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="main">
            <div class="main_left_left_top">
                <div class="content">
                    @RenderBody();
                </div>
            </div>
        </div>
    </div>
    <div id="footer">
    </div>
</body>
</html>
