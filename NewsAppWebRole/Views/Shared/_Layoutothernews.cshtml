    <div class="page">
        <div id="header">
            <div class="advertise">
                <div style="width: 900px; margin-left: auto; margin-right: auto; vertical-align: baseline;
                    padding-top: 5px">
                    <div style="float: left; padding-bottom: 10px">
                        <a href="#">ePopertySearch</a></div>
                    <div style="float: right; padding-bottom: 10px">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
            <div class="leaderBoard">
            </div>
            <div class="top_header">
                <div id="title">
                    <img src=".../Content/themes/base/images/zambia.png" alt="Logo" /><br />
                    informing the public
                </div>
                <div id="header_breakingNews">
                  @*  @Html.Partial("BreakingNews")*@
                </div>
                <div id="header_featuredProperty">
                    <div class="featuredProperty">
                     @*   @Html.Partial("_FeaturedProperty")*@
                    </div>
                </div>
            </div>
            <div>
                <div class="navigation">
                    <div style="vertical-align: middle">
                        <div style="float: left;">
                            <ul id="menu">
                                <li class="navLink">@Html.ActionLink("News", "News", "Home")</li>
                                <li class="navLink">@Html.ActionLink("Politics", "Politics", "Home")</li>
                                <li class="navLink">@Html.ActionLink("Business", "Business", "Home")</li>
                                <li class="navLink">@Html.ActionLink("Technology", "Technology", "Home")</li>
                                <li class="navLink">@Html.ActionLink("Entertainment", "Entertainment", "Home")</li>
                                <li class="navLink">@Html.ActionLink("Sport", "Sport", "Home")</li>
                                <li class="navLink"><a href="http://epropertysearchza.cloudapp.net" target="_blank">
                                    Property</a></li>
                                <li class="navLink">@Html.ActionLink("Multimedia", "Multimedia", "Home")</li>
                            </ul>
                        </div>
                        <div class="search">
                            @using (Html.BeginForm("Search", "Home"))
                            {
                                <div style="float: left">
                                    <input type="text" id="text" /></div>
                                <div style="float: left">
                                    <button type="submit" class="btn_search">
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="main">
            <div class="mainbody">
                <div class="main_left">
                    <div class="main_left_body_top">
                        <div>
                            <div class="content">
                                Headlines</div>
                        </div>
                        <div>
                            <div class="main_left_left_top">
                                <div class="content">
                                    <div class="contentnew">
                                        @RenderBody()</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="main_right">
                    <div class="main_right_body_top">
                        <div class="main_right_top_top">
                            <div class="content">
                                <div class="content_headline">
                                    <div style="color: white; font-size: 1em text-shadow: 0 -1px 2px #0D1A26;">
                                        Headlines 4
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="main_right_top_bottom">
                            <div class="content">
                                @RenderSection("NewItemsTopRight", required: false)</div>
                        </div>
                    </div>
                    <div class="main_right_body_bottom">
                        <div class="main_right_bottom_top">
                            <div class="content">
                            </div>
                        </div>
                        <div class="main_right_bottom_bottom">
                            <div class="content">
                                <div class="content_headline">
                                    <div style="color: white; text-shadow: 0 -1px 2px #0D1A26;">
                                        Properties
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="clear: both">
    </div>
    <div id="footer">
    </div>
</body>
</html>
